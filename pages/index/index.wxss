/**index.wxss**/

.change {
  color: #73807f;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}

.change .icon-down {
  color: #8d9998;
  font-size: 25rpx;
  padding-left: 5rpx;
}

.input-area {
  position: relative;
}

.textarea-wrap {
  background: #fff;
  border-bottom: 1px solid #dfe5e5;

}

.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}

.input-area .icon-close {
  position: absolute;
  /* right: 12rpx; */
  right: 30rpx;
  top: 30rpx;
  z-index: 100;
  font-size: 30rpx;
  color: #8d9998;
}

.input-area .text-area {
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
}

.input-area .text-title {
  font-size: 28rpx;
  color: #73807f;
}

.input-area .text-result {
  padding: 20rpx 0;
}