.lang-list {
  display: flex;
  flex-direction: column;
}

.title {
  background: #fafcfc;
  border-bottom: 1px solid #dfe5e5;
  padding: 20rpx 40rpx;
  color: #aab2b2;
  font-size: 28rpx;
}

.item {
  padding-left: 40rpx;
  background-color: #fafcfc;
}

.item-inner {
  display: flex;
  align-items: center;
  border-top: 1px solid #dfe5e5;
  padding: 20rpx 40rpx 20rpx 0;
}

.item .txt {
  flex: 1;
}

.item .iconfont {
  margin-left: auto;
  color: #f6416c;
}

.item:nth-child(2) .item-inner {
  border-top: none;
}